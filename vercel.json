{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "nodeVersion": "18.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "build": {
        "env": {
            "NODE_VERSION": "18.x"
        },
        "command": "npm run build"
    }
}